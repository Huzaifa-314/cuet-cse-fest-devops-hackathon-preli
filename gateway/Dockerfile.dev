# Development Dockerfile for Gateway
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install all dependencies (including devDependencies like nodemon)
# Use npm install if package-lock.json doesn't exist, otherwise use npm ci
RUN if [ -f package-lock.json ]; then npm ci; else npm install; fi

# Copy source files (will be overridden by volume mount in development)
COPY src ./src

# Expose port
EXPOSE 5921

# Set environment to development
ENV NODE_ENV=development
ENV GATEWAY_PORT=5921

# Use nodemon for hot-reload development
CMD ["npm", "run", "dev"]

